# Mongo & Auth configuration
# Copy this file to `.env.local` for local development

# MongoDB connection string (local example)
MONGO_URL=mongodb://127.0.0.1:27017/todo-real

# JWT secret used to sign cookies (change in production)
JWT_SECRET=replace-with-a-long-random-string

# Default single-user credentials (used by auth seed)
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin123
